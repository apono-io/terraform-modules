{
  "//": {
    "metadata": {
      "backend": "local",
      "overrides": {
        "azurerm_log_analytics_workspace": [
          "local_authentication_enabled"
        ]
      },
      "stackName": "apono-connector",
      "version": "0.21.0"
    },
    "outputs": {
      "apono-connector": {
        "log_analytics_workspace_id": "log_analytics_workspace_id",
        "principal_id": "principal_id"
      }
    }
  },
  "data": {
    "azurerm_resource_group": {
      "azureResourceGroup": {
        "//": {
          "metadata": {
            "path": "apono-connector/azureResourceGroup",
            "uniqueId": "azureResourceGroup"
          }
        },
        "name": "${var.resourceGroup}"
      }
    },
    "azurerm_subscription": {
      "azureSubscription": {
        "//": {
          "metadata": {
            "path": "apono-connector/azureSubscription",
            "uniqueId": "azureSubscription"
          }
        }
      }
    }
  },
  "output": {
    "log_analytics_workspace_id": {
      "value": "${azurerm_log_analytics_workspace.logAnalyticsWorkspace.id}"
    },
    "principal_id": {
      "value": "${azurerm_container_group.container.identity[0].principal_id}"
    }
  },
  "resource": {
    "azurerm_container_group": {
      "container": {
        "//": {
          "metadata": {
            "path": "apono-connector/container",
            "uniqueId": "container"
          }
        },
        "container": [
          {
            "cpu": 1,
            "environment_variables": {
              "APONO_CONNECTOR_ID": "${var.connectorId}",
              "APONO_TOKEN": "${var.aponoToken}",
              "APONO_URL": "api.apono.io",
              "CONNECTOR_METADATA": "{\"cloud_provider\":\"AZURE\",\"subscription_id\":\"${data.azurerm_subscription.azureSubscription.subscription_id}\",\"resource_group\":\"${var.resourceGroup}\",\"region\":\"${coalesce(var.location, data.azurerm_resource_group.azureResourceGroup.location)}\",\"is_azure_admin\":false}"
            },
            "image": "registry.apono.io/apono-connector:v1.7.3",
            "liveness_probe": {
              "failure_threshold": 3,
              "http_get": [
                {
                  "path": "/healthz",
                  "port": 8080,
                  "scheme": "http"
                }
              ],
              "initial_delay_seconds": 30,
              "period_seconds": 30
            },
            "memory": 2,
            "name": "apono-connector",
            "ports": [
              {
                "port": 80
              }
            ]
          }
        ],
        "diagnostics": {
          "log_analytics": {
            "workspace_id": "${azurerm_log_analytics_workspace.logAnalyticsWorkspace.workspace_id}",
            "workspace_key": "${azurerm_log_analytics_workspace.logAnalyticsWorkspace.primary_shared_key}"
          }
        },
        "dns_config": {
          "nameservers": "${var.dnsNameservers}"
        },
        "identity": {
          "identity_ids": "${var.identityIds}",
          "type": "${var.identityType}"
        },
        "image_registry_credential": [
          {
            "password": "${var.aponoToken}",
            "server": "registry.apono.io",
            "username": "apono"
          }
        ],
        "ip_address_type": "${var.ipAddressType}",
        "location": "${coalesce(var.location, data.azurerm_resource_group.azureResourceGroup.location)}",
        "name": "apono-${var.connectorId}-${random_id.stackId.hex}",
        "os_type": "Linux",
        "resource_group_name": "${var.resourceGroup}",
        "subnet_ids": "${var.subnetIds}",
        "tags": "${var.tags}",
        "zones": "${var.zones}"
      }
    },
    "azurerm_log_analytics_workspace": {
      "logAnalyticsWorkspace": {
        "//": {
          "metadata": {
            "path": "apono-connector/logAnalyticsWorkspace",
            "uniqueId": "logAnalyticsWorkspace"
          }
        },
        "local_authentication_enabled": true,
        "location": "${coalesce(var.location, data.azurerm_resource_group.azureResourceGroup.location)}",
        "name": "apono-${var.connectorId}-${random_id.stackId.hex}",
        "resource_group_name": "${var.resourceGroup}",
        "retention_in_days": 30,
        "sku": "PerGB2018",
        "tags": "${var.tags}"
      }
    },
    "random_id": {
      "stackId": {
        "//": {
          "metadata": {
            "path": "apono-connector/stackId",
            "uniqueId": "stackId"
          }
        },
        "byte_length": 2
      }
    }
  },
  "terraform": {
    "required_providers": {
      "azuread": {
        "source": "hashicorp/azuread",
        "version": "~> 3.0"
      },
      "azurerm": {
        "source": "azurerm",
        "version": "~> 4.0"
      },
      "random": {
        "source": "hashicorp/random",
        "version": "~> 3.1"
      }
    }
  },
  "variable": {
    "aponoToken": [
      {
        "type": "string"
      }
    ],
    "connectorId": [
      {
        "default": "apono-connector",
        "type": "string"
      }
    ],
    "dnsNameservers": [
      {
        "default": [
        ],
        "type": "list"
      }
    ],
    "identityIds": [
      {
        "default": [
        ],
        "type": "list"
      }
    ],
    "identityType": [
      {
        "default": "SystemAssigned",
        "type": "string"
      }
    ],
    "ipAddressType": [
      {
        "default": "None",
        "type": "string"
      }
    ],
    "location": [
      {
        "default": null,
        "description": "the location for the resources. if not set it will use the location of the resource group",
        "type": "string"
      }
    ],
    "resourceGroup": [
      {
        "type": "string"
      }
    ],
    "subnetIds": [
      {
        "default": [
        ],
        "type": "list"
      }
    ],
    "tags": [
      {
        "default": {
        },
        "description": "Map of tags for the created resources",
        "type": "map(string)"
      }
    ],
    "zones": [
      {
        "default": [
        ],
        "type": "list"
      }
    ]
  }
}