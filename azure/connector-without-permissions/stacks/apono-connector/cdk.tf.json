{
  "//": {
    "metadata": {
      "backend": "local",
      "stackName": "apono-connector",
      "version": "0.19.2"
    },
    "outputs": {
    }
  },
  "data": {
    "azurerm_resource_group": {
      "azureResourceGroup": {
        "//": {
          "metadata": {
            "path": "apono-connector/azureResourceGroup",
            "uniqueId": "azureResourceGroup"
          }
        },
        "name": "${var.resourceGroup}"
      }
    },
    "azurerm_subscription": {
      "azureSubscription": {
        "//": {
          "metadata": {
            "path": "apono-connector/azureSubscription",
            "uniqueId": "azureSubscription"
          }
        }
      }
    }
  },
  "resource": {
    "azurerm_container_group": {
      "container": {
        "//": {
          "metadata": {
            "path": "apono-connector/container",
            "uniqueId": "container"
          }
        },
        "container": [
          {
            "cpu": 1,
            "environment_variables": {
              "APONO_CONNECTOR_ID": "${var.connectorId}",
              "APONO_TOKEN": "${var.aponoToken}",
              "APONO_URL": "api.apono.io",
              "CONNECTOR_METADATA": "{\"cloud_provider\":\"AZURE\",\"subscription_id\":\"${data.azurerm_subscription.azureSubscription.subscription_id}\",\"resource_group\":\"${var.resourceGroup}\",\"region\":\"${data.azurerm_resource_group.azureResourceGroup.location}\",\"is_azure_admin\":false}"
            },
            "image": "registry.apono.io/apono-connector:v1.6.4",
            "memory": 1.5,
            "name": "apono-connector",
            "ports": [
              {
                "port": 80
              }
            ]
          }
        ],
        "identity": {
          "type": "SystemAssigned"
        },
        "image_registry_credential": [
          {
            "password": "${var.aponoToken}",
            "server": "registry.apono.io",
            "username": "apono"
          }
        ],
        "ip_address_type": "${var.ipAddressType}",
        "location": "${data.azurerm_resource_group.azureResourceGroup.location}",
        "name": "${var.connectorId}",
        "os_type": "Linux",
        "resource_group_name": "${var.resourceGroup}",
        "subnet_ids": "${var.subnetIds}"
      }
    }
  },
  "terraform": {
    "required_providers": {
      "azuread": {
        "source": "hashicorp/azuread",
        "version": "~> 2.0"
      },
      "azurerm": {
        "source": "azurerm",
        "version": "~> 3.10"
      }
    }
  },
  "variable": {
    "aponoToken": [
      {
        "type": "string"
      }
    ],
    "connectorId": [
      {
        "default": "apono-connector",
        "type": "string"
      }
    ],
    "ipAddressType": [
      {
        "default": "None",
        "type": "string"
      }
    ],
    "resourceGroup": [
      {
        "type": "string"
      }
    ],
    "subnetIds": [
      {
        "default": [
        ],
        "type": "list"
      }
    ]
  }
}