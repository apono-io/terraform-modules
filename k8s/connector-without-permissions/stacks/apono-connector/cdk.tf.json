{
  "//": {
    "metadata": {
      "backend": "local",
      "stackName": "apono-connector",
      "version": "0.21.0"
    },
    "outputs": {
    }
  },
  "resource": {
    "helm_release": {
      "connectorHelmChart": {
        "//": {
          "metadata": {
            "path": "apono-connector/connectorHelmChart",
            "uniqueId": "connectorHelmChart"
          }
        },
        "chart": "apono-connector",
        "create_namespace": true,
        "name": "apono-connector",
        "namespace": "${var.namespace}",
        "repository": "https://apono-io.github.io/apono-helm-charts/",
        "set": [
          {
            "name": "apono.token",
            "value": "${var.aponoToken}"
          },
          {
            "name": "apono.connectorId",
            "value": "${var.connectorId}"
          },
          {
            "name": "apono.url",
            "value": "api.apono.io"
          },
          {
            "name": "image.registry",
            "value": "registry.apono.io"
          },
          {
            "name": "image.name",
            "value": "apono-connector"
          },
          {
            "name": "image.tag",
            "value": "v1.7.6"
          },
          {
            "name": "serviceAccount.manageClusterRoles",
            "value": "false"
          },
          {
            "name": "resources.limits.cpu",
            "value": "${var.cpu}"
          },
          {
            "name": "resources.requests.cpu",
            "value": "${var.cpuRequests}"
          },
          {
            "name": "resources.limits.memory",
            "value": "${var.memory}"
          },
          {
            "name": "resources.requests.memory",
            "value": "${var.memoryRequests}"
          }
        ]
      }
    }
  },
  "terraform": {
    "required_providers": {
      "helm": {
        "source": "helm",
        "version": "~> 2.3"
      }
    }
  },
  "variable": {
    "aponoToken": [
      {
        "type": "string"
      }
    ],
    "connectorId": [
      {
        "default": "k8s-connector",
        "type": "string"
      }
    ],
    "cpu": [
      {
        "default": "1000m",
        "type": "string"
      }
    ],
    "cpuRequests": [
      {
        "default": "500m",
        "type": "string"
      }
    ],
    "memory": [
      {
        "default": "2G",
        "type": "string"
      }
    ],
    "memoryRequests": [
      {
        "default": "1G",
        "type": "string"
      }
    ],
    "namespace": [
      {
        "default": "apono-connector",
        "type": "string"
      }
    ]
  }
}